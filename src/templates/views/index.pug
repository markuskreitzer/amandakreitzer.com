extends ../_/body

//- variables
block context
    - bodyId = 'home';
    - bodyClass = 'home';
    - slidesPath = '/assets/images/gallery/_linked/_verbatim/';

//- body
block main

    main(role="main")

        .canvas

            .content

                header

                    h1.logo Amanda Kreitzer
                    hr
                    nav: ul
                        li: a(href="/gallery") Gallery
                        li: a(href="/about") About
                        li: a(href="/contact") Contact

                +carousel-1({
                    slides: [
                        { path: `${ slidesPath }42.webp`, active: true },
                        { path: `${ slidesPath }21.webp`  },
                        { path: `${ slidesPath }44.webp` },
                        { path: `${ slidesPath }15.webp` },
                        { path: `${ slidesPath }35.webp`  },
                    ]
                })
