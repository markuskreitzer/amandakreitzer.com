-
    title = 'Title to be confirmed';
    pathImages = '/assets/images/gallery/_linked/_verbatim/';
    imgThumbWidth = '100%';
    imgThumbHeight = 'auto';
    imgWidth = '100%';
    imgHeight = 'auto';

    id = 36;

.item.sold

    a.thumbnail(href=`#${ id }`)
        img.thumbnail-image(
            src=`${ pathImages }${ id }.webp`
            width= imgThumbWidth
            height= imgThumbHeight
            loading="lazy"
            alt="thumbnail")
        span.thumbnail-title= title
        span.thumbnail-id= id

    .modal(id= id)

        a.close(href="#")

        figure

            img(src=`${ pathImages }${ id }.webp`
                width= imgWidth
                height= imgHeight
                alt= title
                loading="lazy")

            figcaption

                .meta
                    span.title= title
                    span.artist by Amanda Kreitzer
                    span.id Art. #{ id }

                    .meta-inner

                        dl
                            dt released
                            dd 1995
                        dl
                            dt medium
                            dd Oil
                        dl
                            dt substrate
                            dd Wood
                        dl
                            dt framed
                            dd Yes
                        dl
                            dt width
                            dd 15" (38cm)
                        dl
                            dt height
                            dd 15" (38cm)

                .actions
                    span.status Sold
                    span.price
                        | $---
                        sup .00

                    a(href="/contact/" class="buy") Contact
